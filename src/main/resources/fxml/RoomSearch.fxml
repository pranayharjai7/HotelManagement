<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>


<AnchorPane prefHeight="650.0" prefWidth="850.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pranayharjai.hotelmanagement.Controllers.RoomSearchController">
   <children>
      <ImageView fitHeight="650.0" fitWidth="850.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../Images/primary.jpg" />
         </image>
      </ImageView>
      <TableView fx:id="roomSearchTableView" layoutX="231.0" layoutY="123.0" prefHeight="458.0" prefWidth="594.0">
        <columns>
          <TableColumn fx:id="roomNo" prefWidth="115.99993896484375" text="RoomNo" />
          <TableColumn fx:id="typeOfRoom" prefWidth="155.20001220703125" text="Type of Room" />
            <TableColumn fx:id="noOfBeds" prefWidth="117.59994506835938" text="No of Beds" />
            <TableColumn fx:id="price" prefWidth="87.199951171875" text="Price" />
            <TableColumn fx:id="availability" prefWidth="117.60009765625" text="Availability" />
        </columns>
      </TableView>
      <MenuButton fx:id="typeOfRoomMenuButton" layoutX="14.0" layoutY="189.0" mnemonicParsing="false" text="Type Of Room">
        <items>
          <MenuItem fx:id="acMenuItem" mnemonicParsing="false" onAction="#acMenuItemClicked" text="AC" />
          <MenuItem fx:id="nonAcMenuItem" mnemonicParsing="false" onAction="#nonAcMenuItemClicked" text="NON-AC" />
        </items>
      </MenuButton>
      <MenuButton fx:id="noOfBedsMenuButton" layoutX="129.0" layoutY="189.0" mnemonicParsing="false" text="No. of Beds">
        <items>
          <MenuItem fx:id="oneBedMenuItem" mnemonicParsing="false" onAction="#oneBedMenuItemClicked" text="1" />
          <MenuItem fx:id="twoBedMenuItem" mnemonicParsing="false" onAction="#twoBedMenuItemClicked" text="2" />
            <MenuItem fx:id="threeBedMenuItem" mnemonicParsing="false" onAction="#threeBedMenuItemClicked" text="3" />
        </items>
      </MenuButton>
      <MenuButton fx:id="orderByMenuButton" layoutX="727.0" layoutY="63.0" mnemonicParsing="false" text="Order By:">
        <items>
          <MenuItem fx:id="noOfBedsMenuItem" mnemonicParsing="false" onAction="#noOfBedsMenuItemClicked" text="No. of Beds" />
          <MenuItem fx:id="priceMenuItem" mnemonicParsing="false" onAction="#priceMenuItemClicked" text="Price" />
        </items>
      </MenuButton>
      <Button layoutX="17.0" layoutY="556.0" mnemonicParsing="false" onAction="#clearFiltersButtonClicked" text="Clear Filters" />
      <Button layoutX="740.0" layoutY="595.0" mnemonicParsing="false" onAction="#bookButtonClicked" prefHeight="43.0" prefWidth="82.0" text="Book">
         <font>
            <Font size="20.0" />
         </font>
      </Button>
      <Button layoutX="17.0" layoutY="14.0" mnemonicParsing="false" onAction="#backButtonClicked" text="BACK" />
   </children>
</AnchorPane>
